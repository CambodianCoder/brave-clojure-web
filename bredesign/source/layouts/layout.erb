<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "main" %>
    <link href='http://fonts.googleapis.com/css?family=Oswald:400,300|Gentium+Book+Basic:400,700|IM+Fell+English|Open+Sans+Condensed:300,600|IM+Fell+DW+Pica|Open+Sans:300,400,600|Fjalla+One|Yellowtail|Courgette' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
